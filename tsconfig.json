{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "dist",
    "strictNullChecks": false,
    "module": "es2015",
    "target": "es2017",
    "noImplicitAny": true,
    "sourceMap": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "jsx": "react",
    "lib": [
      "dom",
      "es2015",
      "es2016",
      "es2017"
    ],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "noEmitHelpers": true,
    "noImplicitReturns": true,
    "noUnusedLocals": false,
    "strict": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "**/*.test.tsx",
    "**/*.spec.ts"
  ],
  "types": [
    "typePatches"
  ],
  "jest": {
    "globals": {
      "ts-jest": {
        "skipBabel": true
        // "tsConfigFile": "my-tsconfig.json"
      }
    }
  }
}
